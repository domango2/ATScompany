<Window x:Class="ATScompany.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATScompanySpace"
        mc:Ignorable="d"
        Title="PhoneNumberDialog" Height="200" Width="400" Icon="/iconATS.ico">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите сумму:"/>
            <TextBox x:Name="PaymentAmountTextBox" Width="200" Margin="10"/>
            <Button Content="Подтвердить" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
