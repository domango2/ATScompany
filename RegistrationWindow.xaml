<Window x:Class="ATScompanySpace.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Регистрация" Height="400" Width="600" Icon="/iconATS.ico">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Заполните все поля для регистрации:" FontSize="16" Margin="0 0 0 10"/>
            <TextBox x:Name="NameTextBox" Width="250" Margin="0 0 0 10" materialDesign:HintAssist.Hint="Имя"/>
            <TextBox x:Name="AddressTextBox" Width="250" Margin="0 0 0 10" materialDesign:HintAssist.Hint="Адрес"/>
            <DatePicker x:Name="BirthDatePicker" Width="250" Margin="0 0 0 10" materialDesign:HintAssist.Hint="Дата рождения"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Margin="0 0 0 10" materialDesign:HintAssist.Hint="Пароль"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click"/>
            <Button Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
